#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run pnpm check (Biome linter/formatter)
echo "ğŸ“ Running pnpm check..."
pnpm run check

# Check if pnpm check succeeded
if [ $? -ne 0 ]; then
  echo "âŒ Check failed. Please fix the linting/formatting issues before committing."
  exit 1
fi

# Run the build to ensure everything compiles
echo "ğŸ”¨ Running build..."
pnpm run build

# Check if build succeeded
if [ $? -ne 0 ]; then
  echo "âŒ Build failed. Please fix the compilation errors before committing."
  exit 1
fi

# Run tests
echo "ğŸ§ª Running tests..."
pnpm run test

# Check if tests succeeded
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Please fix the failing tests before committing."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"