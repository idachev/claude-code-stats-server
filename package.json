{
  "name": "claude-code-stats-server",
  "version": "1.0.0",
  "description": "Server for collecting and visualizing Claude Code usage statistics",
  "author": "Claude Code Stats Team",
  "repository": "https://github.com/yourusername/claude-code-stats-server",
  "license": "MIT",
  "main": "index.ts",
  "private": true,
  "scripts": {
    "build": "pnpm run scss:build && tsc && tsup",
    "start:dev": "node --import=tsx --watch src/index.ts",
    "start:prod": "node dist/index.js",
    "check": "biome check --write && pnpm run format:all",
    "format:all": "pnpm run format:scss && pnpm run format:css && pnpm run format:ejs",
    "format:scss": "prettier --write 'src/styles/**/*.scss'",
    "format:css": "find src -name '*.css' -type f -print -quit | grep -q . && prettier --write 'src/**/*.css' || echo 'No CSS files to format'",
    "format:ejs": "find src/views -name '*.ejs' -type f -exec js-beautify --type html --config .jsbeautifyrc --replace {} \\;",
    "format:check": "find src -name '*.css' -type f -print -quit | grep -q . && prettier --check 'src/**/*.css' || echo 'No CSS files to check'",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "scss:build": "sass src/styles/theme.scss src/public/css/theme.css --style compressed",
    "scss:watch": "sass src/styles/theme.scss src/public/css/theme.css --watch",
    "css:build": "tailwindcss -i ./src/public/css/input.css -o ./src/public/css/output.css --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "prepare": "husky"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "7.3.4",
    "bcrypt": "6.0.0",
    "connect-pg-simple": "^10.0.0",
    "cors": "2.8.5",
    "date-fns": "4.1.0",
    "dayjs": "1.11.13",
    "dotenv": "17.2.1",
    "drizzle-orm": "0.44.4",
    "ejs": "3.1.10",
    "express": "5.1.0",
    "express-rate-limit": "8.0.1",
    "express-session": "^1.18.2",
    "helmet": "8.1.0",
    "http-status-codes": "2.3.0",
    "pg": "8.16.3",
    "pino": "9.9.0",
    "pino-http": "10.5.0",
    "pino-pretty": "13.1.1",
    "postgres": "3.4.7",
    "swagger-ui-express": "5.0.1",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.4",
    "@playwright/test": "1.54.2",
    "@types/bcrypt": "6.0.0",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/cors": "2.8.19",
    "@types/ejs": "3.1.5",
    "@types/express": "5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/node": "20.19.11",
    "@types/pg": "8.15.5",
    "@types/supertest": "6.0.3",
    "@types/swagger-ui-express": "4.1.8",
    "@vitest/coverage-v8": "3.2.4",
    "drizzle-kit": "0.31.4",
    "husky": "9.1.7",
    "js-beautify": "1.15.4",
    "jsdom": "^26.1.0",
    "playwright": "1.54.2",
    "prettier": "3.6.2",
    "prettier-plugin-ejs": "1.0.3",
    "sass": "^1.91.0",
    "supertest": "7.1.4",
    "tailwindcss": "3.4.17",
    "ts-node": "10.9.2",
    "tsup": "8.5.0",
    "tsx": "4.20.4",
    "typescript": "5.9.2",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "outDir": "dist",
    "format": [
      "esm",
      "cjs"
    ],
    "target": "es2020",
    "sourcemap": true,
    "clean": true,
    "dts": true,
    "splitting": false,
    "skipNodeModulesBundle": true
  },
  "packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b"
}
