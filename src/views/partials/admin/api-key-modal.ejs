<!-- API Key Display Modal Template -->
<div id="apiKeyModal" class="fixed inset-0 bg-black bg-opacity-75 z-[60] flex items-center justify-center hidden">
  <div class="bg-dark-card border border-dark-border rounded-lg shadow-xl w-full max-w-lg mx-4 p-6">
    <h3 class="text-xl font-bold mb-4 text-white">API Key Generated</h3>
    <p class="text-gray-300 mb-4">Please save this API key securely. It won't be shown again.</p>
    <div class="bg-dark-bg border border-dark-border rounded p-3 mb-4">
      <code id="apiKeyDisplay" class="text-green-400 break-all"></code>
    </div>
    <div class="flex justify-end gap-3">
      <button id="copyApiKeyBtn" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition-colors">
        Copy to Clipboard
      </button>
      <button id="closeApiKeyBtn" class="px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700 transition-colors">
        Close
      </button>
    </div>
  </div>
</div>
