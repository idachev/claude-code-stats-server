<div class="min-h-screen flex items-center justify-center">
  <div class="bg-dark-card rounded-xl p-8 max-w-md w-full">
    <div class="text-center">
      <div class="mb-4">
        <svg class="w-16 h-16 text-red-500 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z">
          </path>
        </svg>
      </div>
      <h2 class="text-2xl font-bold text-white mb-2">Error</h2>
      <p class="text-gray-400 mb-4"><%= message %></p>
      <% if (error) { %>
      <div class="bg-dark-bg rounded-lg p-4 text-left">
        <p class="text-xs text-gray-500 font-mono"><%= error %></p>
      </div>
      <% } %>
      <div class="mt-6">
        <a href="/dashboard" class="inline-block px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
          Back to Dashboard
        </a>
      </div>
    </div>
  </div>
</div>
