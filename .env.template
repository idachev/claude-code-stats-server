# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# CORS Configuration
# Supports multiple origins (comma-separated) or wildcard
# Examples:
# - Single origin: http://localhost:3000
# - Multiple origins: http://localhost:3000,https://app.example.com,https://api.example.com
# - Allow all (use with caution): *
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
COMMON_RATE_LIMIT_WINDOW_MS=1000
COMMON_RATE_LIMIT_MAX_REQUESTS=20

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=9099
DB_NAME=claude_code_stats
DB_USER=localdev
DB_PASSWORD=db-test-pass
DB_MAX_CONNECTIONS=20

# Logging
LOG_LEVEL=debug

# Admin Authentication
ADMIN_API_KEY=ccs_admin_change_this_in_production_12345678901234567890

# Session Configuration
SESSION_SECRET=change_this_secret_in_production_must_be_at_least_32_chars_long
ADMIN_SESSION_TIMEOUT_SECONDS=900
ADMIN_MAX_LOGIN_ATTEMPTS=5
ADMIN_RATE_LIMIT_WINDOW_SECONDS=900

# Session Pool Configuration
SESSION_POOL_MAX=10
SESSION_POOL_IDLE_TIMEOUT_MS=30000
SESSION_POOL_CONNECTION_TIMEOUT_MS=30000
